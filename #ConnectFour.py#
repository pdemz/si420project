rack = [['*' for x in range(7)] for x in range(6)]

currPlayer = "R"
column = 0
game = "incomplete"

up(row, column, rack[row][column])
            up(row, column, rack[row][column])
            up(row, column, rack[row][column])
            up(row, column, rack[row][column])
            up(row, column, rack[row][column])
            up(row, column, rack[row][column])
            up(row, column, rack[row][column])
            up(row, column, rack[row][column])
#Make a move
def makeMove(column):
    column -= 1
    for x in range(5, -1, -1):
        if rack[x][column] == '*':
            rack[x][column] = currPlayer
            return

#Print out the board and change whose turn it is
def printBoard():
    for x in range(0,6):
        row = ""
        for y in range(0,7):
            row += rack[x][y]
        print(row)
    print("1234567")
    print('\n')

#Continue the game until someone wins
printBoard()

while(game != "complete"):
    if currPlayer == "R":
        column = input("Black player, what's your move? ")
        currPlayer = "B"
    else:
        column = input("Red player, what's your move? ")
        currPlayer = "R"
    while column < 1 or column > 7 or not isinstance(column, int):
        column = input("Invalid move, try again. ")
    
    while rack[0][column-1] != '*':
        column = input("Invalid move, try again. ")

    makeMove(column)
    printBoard()
    game = winOrDrawCheck()
    
